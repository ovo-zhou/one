// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  displayName String
  image String
}

model Post {
  id        Int      @id @default(autoincrement())
  kind      String
  title     String
  content   String?
  published String
  updated   String
}
