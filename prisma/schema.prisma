// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  uid      Int        @unique
  name     String
  avatar   String
  posts    Post[]
  Img      Img[]
  Comments Comments[]
}

model Post {
  id        Int        @id @default(autoincrement())
  type      String
  title     String
  abstract  String
  content   String
  published String
  updated   String
  author    User       @relation(fields: [authorId], references: [id])
  authorId  Int
  Comments  Comments[]
}

model Img {
  id        Int    @id @default(autoincrement())
  name      String
  url       String
  width     Int
  height    Int
  size      Int
  type      String
  published String
  author    User   @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Comments {
  id        Int    @id @default(autoincrement())
  postId    Int
  post      Post   @relation(fields: [postId], references: [id])
  authorId  Int
  author    User   @relation(fields: [authorId], references: [id])
  content   String
  published String
  updated   String
  parentId  Int    @default(0)
}
